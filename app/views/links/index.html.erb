 <div class="container" id="content">
  <div class="row">
    </br>
    <div class="large-4 medium-4 columns">
      <h3 class="text-center">New Link Entry:</h3>
      <%= render partial: "shared/link_form" %>
    </div>

    <div class="large-8 medium-8 columns">
      <h3 class="text-center">My Links:</h3>
      <hr>
      <div class="text-center">
        <label>Search by Title:</label>
        <%= text_field :link, :search %>
      </div>
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th>URL</th>
          <th>Status</th>
          <th>Change Status</th>
        </tr>
        <% @links.each do |link| %>
          <% if link.read %>
            <tr class="strikeout link_details text-center" data-title="<%= link.title %>">
              <%= render partial: "shared/link_row_display", locals: { link: link, status: false } %>
            </tr>
          <% else %>
            <tr class="link_details text-center" data-title="<%= link.title %>">
              <%= render partial: "shared/link_row_display", locals: { link: link, status: true } %>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>
