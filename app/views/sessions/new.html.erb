<div class="callout large primary text-center">
  <h3>User Log In</h3>
</div>

<div class="row" id="content">
  <div class="large-6 large-centered medium-6 medium-centered columns">
    <h5>Log In:</h5>
    <%= form_for :user do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.text_field :password %>

      <%= f.submit "Log In", class: "button large expanded" %>
    <% end %>

    </br>
    <h5 class="text-center">- OR -</h5>
    <hr>
    <%= link_to "New User Sign Up", new_user_path, class: "button large expanded" %>
  </div>
</div>
